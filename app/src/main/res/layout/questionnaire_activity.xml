<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="42dp"
        android:id="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/quesDescTV">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questionnaire"
            android:textSize="26sp"
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_bold"
            android:id="@+id/questionnaireTV"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:maxLines="5"
            android:gravity="center"
            android:text="You will be given 10 questions to answer about your partner. Each question can be given a maximum of 10 points"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_medium"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/questionnaireTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_medium"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Tip: Long press to scale up points."/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET STARTED"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:elevation="16dp"
        android:id="@+id/getStartedTV"
       />


</android.support.constraint.ConstraintLayout>